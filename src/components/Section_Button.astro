---
interface Props {
	title_button: string;
	page_link: string;
}

const { title_button, page_link } = Astro.props;
---

<a
	href={page_link}
	class='flex items-center justify-center h-20 px-16 text-2xl font-bold text-center transition-all rounded-sm max-w-80 bg-picton-blue-800 outline outline-2 outline-picton-blue-300 hover:bg-picton-blue-900 hover:outline-picton-blue-400 hover:shadow-md'
	>{title_button}</a
>
